doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title MyDrugs | Register
  link(rel='icon' type='image/x-icon' href='./public/favicon.svg')
  link(rel='stylesheet' href='/style.css')
  .register-wrapper
    h1 MyDrugs
    .container 
      h2 Register
        form(id='registerForm')
          div
            label(for='name') Full Name
            input(type='text' name='name' id='registerName' placeholder='Enter your Full Name')
          div
            label(for='email') Email
            input(type='email' name='email' id='emailRegister' placeholder='example@domain.co')
          div
            label(for='password') Password
            input(type='text' name='password' id='passwordRegister'  placeholder='********')
          div 
            label(for='passwordConfirm') Password Confirm
            input(type='text' name='passwordConfirm' id='passConfirmRegister' placeholder='********')
          .operations-wrapper
            button#submitRegister(class='btn btn--black') Register!
            a(href='/login') Login 